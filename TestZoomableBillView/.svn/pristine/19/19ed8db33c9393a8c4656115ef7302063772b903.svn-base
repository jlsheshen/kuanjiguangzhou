<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/tv_subject_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:text="单选题"
        android:textColor="#6766cc"
        android:textSize="@dimen/txt_size_half_medium" />

    <ScrollView
        android:id="@+id/sl_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/tv_subject_type"
        android:scrollbars="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_half_medium" />

            <RadioGroup
                android:id="@+id/rg_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_question"
                android:layout_below="@+id/tv_question"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <RadioButton
                    android:id="@+id/rb_A"
                    style="@style/rb_option_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="A" />

                <RadioButton
                    android:id="@+id/rb_B"
                    style="@style/rb_option_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="B" />

                <RadioButton
                    android:id="@+id/rb_C"
                    style="@style/rb_option_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="C" />

                <RadioButton
                    android:id="@+id/rb_D"
                    style="@style/rb_option_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="D" />
            </RadioGroup>

            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rg_option"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/txt_size_half_medium"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_answer"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/txt_size_half_medium"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_analysis"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="发送成绩"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_half_medium"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>